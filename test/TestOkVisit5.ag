-- A grammar that requires two visits, and a SELF attribute
-- that is needed in both passes

DATA Root
   | Root  a : Aap

DATA Aap
	| Een   t : Int
	| Twee  u : Aap


ATTR Aap [ x : Int | y : Int |  z : Int   s : SELF ]


SEM Root
  | Root  a.x = @a.y + f @a.s
          a.y = 7
          
SEM Aap
  | Een  lhs.y = @t
         lhs.z = @t + @lhs.x
         
  | Twee lhs.y = 7
         lhs.z = f @u.s       

{
f :: Aap -> Int
f a = 5
}

