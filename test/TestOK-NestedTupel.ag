-- A grammar that has local attributes defined in a nested record

DATA Aap
	| Een   t : Int

ATTR Aap [ | | y:Int   z:Int ]

SEM Aap
  | Een  -- loc.((a,b),c) = ((1,2),3)
         loc.a : Int
         loc.b : Int
         loc.c : Int
         loc.d : Int
         loc.(a,(b,c)) = (1,(2,3))
         (lhs.y, loc.d) = (4,5)
         --loc.(a,b,c,d) = (1,2,3,4)
         --lhs.y = 5
         lhs.z = @loc.a + @loc.b + @loc.c + @loc.d
