\frame {
  \frametitle{The Semantic Functions}

  \begin{code}
SEM  Doc
  |  Section  body.count      =   1

              body.context    =   @loc.prefix
              lhs.count       =   @lhs.count + 1
              lhs.html        =   @loc.html
              loc.prefix      =   if    null atlhs.context
                                  then  show atlhs.count
                                  else  atlhs.context
                                        ++ "."
                                        ++ show atlhs.count
              loc.html        =   mk_tag  ("H" ++ show atlhs.level)
                                          ""
                                          (  @loc.prefix ++ " "
                                             ++ attitle)
                                  ++ @body.html
  \end{code}
}


