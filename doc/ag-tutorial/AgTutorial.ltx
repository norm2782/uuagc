  \begin{code}
SEM Doc
  |  Section
          lhs   .toclines =   mk_tag "LI" ""
                              (mk_tag  ("A")
                              ^  (" HREF=#" ++ @loc.prefix)
                                 (  @loc.prefix ++ " "
                                    ++ @title))
                              ++   mk_tag "UL" "" @body.toclines
          lhs   .html     :=  mk_tag "A"  (  " NAME="
                              ^            ++ @loc.prefix) ""
                              ++   @loc.html
  |  Toc  lhs   .html     =   @lhs.toc

SEM Root
  |  Root  doc  .toc      =   @doc.toclines
           doc  .level    =   1
           doc  .context  =   ""
           doc  .count    =   1

  \end{code}
