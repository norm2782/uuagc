imports
{
-- Patterns.ag imports
import UU.Scanner.Position(Pos)
import CommonTypes (Constructor,Name)
}

TYPE Patterns   = [Pattern]

DATA Pattern    | Constr     name  : {Constructor}
                             pats  : Patterns
                | Product    pos   : {Pos}
                             pats  : Patterns
                | Alias      field : {Name}
                             attr  : {Name}
                             pat   : Pattern
                | Underscore pos   : {Pos}

ATTR AllPattern [ | | copy : SELF ]

SET AllPattern
  = Pattern Patterns